{
  "name": "airport-db",
  "version": "0.3.1",
  "description": "TypeScript query library for airport data",
  "type": "module",
  "bin": {
    "airport-db": "./dist/bin/airport-db.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/tabletopandroid/airport-db",
  "repository": {
    "type": "git",
    "url": "https://github.com/tabletopandroid/airport-db.git"
  },
  "bugs": {
    "url": "https://github.com/tabletopandroid/airport-db/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/browser.js",
      "node": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "default": "./dist/browser.js"
    },
    "./assets/wasm": "./dist/assets/sql-wasm.wasm",
    "./assets/sqlite": "./dist/assets/airports.sqlite"
  },
  "scripts": {
    "build": "tsc && npm run build:assets",
    "build:assets": "node scripts/build-browser-assets.mjs",
    "changeset": "changeset",
    "clean": "rimraf dist package-lock.json node_modules",
    "dev": "ts-node src/index.ts",
    "publish-packages": "changeset publish",
    "prepublishOnly": "npm run build",
    "release": "node scripts/github-release.mjs",
    "test": "npm run build && node --test \"test/*.test.mjs\"",
    "version-packages": "changeset version",
    "watch": "tsc --watch"
  },
  "keywords": [
    "airport",
    "database",
    "query",
    "sqlite",
    "typescript",
    "aviation",
    "airac"
  ],
  "author": "tabletop ANDROID",
  "license": "MIT",
  "dependencies": {
    "@tabletopandroid/airport-db-data-sqlite": "^0.2.0",
    "better-sqlite3": "^12.6.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.5",
    "@types/sql.js": "^1.4.9",
    "rimraf": "^6.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
